<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:id="@+id/form"
                      android:layout_height="wrap_content"
                      android:paddingLeft="10dp"
                      android:paddingTop="20dp"
                      android:paddingRight="10dp"
                      android:paddingBottom="20dp"
                      android:padding="10dp"
                      android:background="#ececec">
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/id"
                    android:enabled="false"
                    android:visibility="gone"
                    android:text="@string/field_value_id"
                    android:inputType="text"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_title"
                    android:textSize="16dp"
                    android:padding="2dp"
                    android:gravity="left"
                    />
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:singleLine="true"
                    android:autoText="false"
                    android:hint="@string/hint_title"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_subtitle"
                    android:textSize="16dp"
                    android:padding="2dp"
                    android:gravity="left"
                    />
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle"
                    android:singleLine="true"
                    android:autoText="false"
                    android:hint="@string/hint_subtitle"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_lead"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lead"
                    android:inputType="textMultiLine"
                    android:hint="@string/hint_lead"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_content"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/content"
                    android:inputType="textMultiLine"
                    android:hint="@string/hint_content"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_date"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:singleLine="true"
                    android:inputType="date"
                    android:hint="@string/hint_date"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_category"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <Spinner
                    android:id="@+id/category"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_status"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <Spinner
                    android:id="@+id/status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_rating"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <Spinner
                    android:id="@+id/rating"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_amazon_item_id"
                    android:textSize="16dp"
                    android:padding="2dp"
                    android:gravity="left"
                    />
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/amazon_item_id"
                    android:singleLine="true"
                    android:autoText="false"
                    android:hint="@string/hint_amazon_item_id"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_meta_title"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/meta_title"
                    android:singleLine="true"
                    android:inputType="text"
                    android:hint="@string/hint_meta_title"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_meta_description"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/meta_description"
                    android:inputType="text"
                    android:hint="@string/hint_meta_description"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/field_label_meta_keywords"
                    android:textSize="16dp"
                    android:gravity="left"
                    android:padding="2dp"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/meta_keywords"
                    android:singleLine="true"
                    android:inputType="text"
                    android:hint="@string/hint_meta_keywords"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_save"
                    android:id="@+id/submit"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_marginTop="8dp"
                    android:onClick="submitForm"/>
        </LinearLayout>
</ScrollView>